{
  "parser": "@typescript-eslint/parser",
  "rules": {
    "quotes": ["error", "double"]
  },
  "overrides": [
    {
      "files": ["src/**/*.ts?(x)"],
      "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
          "jsx": true
        }
      },
      "plugins": [
        "import",
        "react"
      ],
      "rules": {
        "indent": [
          "error",
          2,
          {
            "SwitchCase": 1
          }
        ],
        "react/jsx-indent": [
          1,
          2
        ],
        "react/jsx-indent-props": [
          1,
          2
        ],
        "lines-between-class-members": [
          "error",
          "always"
        ],
        "linebreak-style": [
          "error",
          "unix"
        ],
        "import/first": "error",
        "import/newline-after-import": "error",
        "semi": [
          "warn",
          "always"
        ],
        "quotes": [
          "warn",
          "single"
        ],
        "object-curly-spacing": [
          "warn",
          "always"
        ],
        "object-curly-newline": [
          "warn",
          {
            "ObjectExpression": {
              "multiline": true,
              "minProperties": 3,
              "consistent": true
            },
            "ObjectPattern": {
              "multiline": true,
              "minProperties": 3,
              "consistent": true
            },
            "ImportDeclaration": {
              "multiline": true,
              "minProperties": 3,
              "consistent": true
            },
            "ExportDeclaration": "never"
          }
        ]
      }
    }
  ]
}